{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "authors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "posts",
      "dominant": true
    },
    "publishedAt": {
      "type": "date",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "post"
    },
    "slug": {
      "type": "string",
      "required": false
    }
  }
}
